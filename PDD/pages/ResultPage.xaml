<Page x:Class="PDD.pages.ResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PDD.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ResultPage">

    <Grid>
        <Border CornerRadius="10,10,10,10" BorderBrush="Black" Background="White" Width="350" Height="200"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Ваш результат:" FontSize="24" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Правильно отвечено: " HorizontalAlignment="Center"/>
                <TextBlock Text="20"/>
            </StackPanel>
            <TextBlock x:Name="WordButton" Text="Молодец!" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" >
                <Button x:Name="ToTicketsButton" Content="К билетам" Width="100" Height="30" Margin="5" />
                <Button x:Name="RestartButton" Content="Заново" Width="100" Height="30" Margin="5"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
